# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Arcjet key from https://app.arcjet.com
ARCJET_KEY=

# Google Gemini API key from https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# Next.js app URL
NEXT_PUBLIC_APP_URL=http://localhost:3125

# =============================================================================
# CHATBOT BASIC CONFIGURATION
# =============================================================================

# Basic chatbot information
CHATBOT_NAME="AI Assistant"
CHATBOT_WELCOME_MESSAGE="Hello! I'm your AI Assistant. What can I help you with today? {{choice:See Features}} {{link:https://github.com/DeDevsClub/ai-support-chatbot|Source Code}}"

# =============================================================================
# UI CUSTOMIZATION
# =============================================================================

# Window and interface settings
CHATBOT_WINDOW_TITLE="AI Assistant"
CHATBOT_INPUT_PLACEHOLDER="Message AI Assistant..."
CHATBOT_AVATAR_IMAGE="/ai-avatar.png"
CHATBOT_AVATAR_FALLBACK="AI"

# Theme customization
CHATBOT_PRIMARY_COLOR="#3B82F6"
CHATBOT_BORDER_RADIUS="md"
CHATBOT_ANIMATIONS=true
CHATBOT_ANIMATION_DURATION=300
CHATBOT_ANIMATION_EASING="ease-out"

# Positioning settings
CHATBOT_MOBILE_FULLSCREEN=true
CHATBOT_DESKTOP_POSITION="bottom-right"
CHATBOT_DESKTOP_OFFSET_X=20
CHATBOT_DESKTOP_OFFSET_Y=20
CHATBOT_DESKTOP_WIDTH=400
CHATBOT_DESKTOP_HEIGHT=600

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limiting settings
CHATBOT_RATE_LIMIT_CAPACITY=5
CHATBOT_RATE_LIMIT_REFILL_RATE=2
CHATBOT_RATE_LIMIT_INTERVAL=10
CHATBOT_MIN_TIME_BETWEEN_MESSAGES=1000
CHATBOT_MAX_MESSAGE_LENGTH=1000
CHATBOT_RATE_LIMIT_STRATEGY="token-bucket"
CHATBOT_BURST_ALLOWANCE=2
CHATBOT_GRACE_PERIOD=5

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# AI model settings
CHATBOT_AI_MODEL="gemini-2.5-flash-lite"
CHATBOT_AI_TEMPERATURE=0.7
CHATBOT_AI_MAX_TOKENS=2048
CHATBOT_AI_TOP_P=0.9
CHATBOT_AI_FREQUENCY_PENALTY=0
CHATBOT_AI_PRESENCE_PENALTY=0
CHATBOT_AI_TIMEOUT=30000

# AI retry settings
CHATBOT_AI_MAX_RETRIES=3
CHATBOT_AI_BACKOFF_MULTIPLIER=2
CHATBOT_AI_INITIAL_DELAY=1000

# AI streaming settings
CHATBOT_AI_STREAMING=true
CHATBOT_AI_BUFFER_SIZE=10

# System prompt (multiline supported)
CHATBOT_SYSTEM_PROMPT="You are a helpful AI assistant on a website. Help users understand the product, which is an open source AI chatbot template."

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Bot detection and protection
CHATBOT_ENABLE_BOT_DETECTION=true
CHATBOT_ENABLE_SHIELD=true
CHATBOT_ALLOWED_BOTS=

# Content filtering
CHATBOT_CONTENT_FILTERING=true
CHATBOT_CONTENT_FILTERING_STRICT=false
CHATBOT_CUSTOM_FILTERS=

# CORS settings
CHATBOT_CORS_ORIGINS="*"
CHATBOT_CORS_METHODS="GET,POST"
CHATBOT_CORS_CREDENTIALS=false

# Encryption settings
CHATBOT_ENCRYPTION_ENABLED=false
CHATBOT_ENCRYPTION_ALGORITHM="AES-256-GCM"

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Analytics settings
CHATBOT_ANALYTICS_ENABLED=false
CHATBOT_ANALYTICS_PROVIDER="custom"
CHATBOT_ANALYTICS_TRACKING_ID=

# Event tracking
CHATBOT_TRACK_CONVERSATIONS=true
CHATBOT_TRACK_ERRORS=true
CHATBOT_TRACK_PERFORMANCE=false
CHATBOT_TRACK_USER_SATISFACTION=false

# Privacy settings
CHATBOT_ANONYMIZE_IPS=true
CHATBOT_RESPECT_DNT=true
CHATBOT_DATA_RETENTION_DAYS=90

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# i18n settings
CHATBOT_I18N_ENABLED=false
CHATBOT_DEFAULT_LOCALE="en"
CHATBOT_SUPPORTED_LOCALES="en"
CHATBOT_FALLBACK_LOCALE="en"
CHATBOT_AUTO_DETECT_LOCALE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching settings
CHATBOT_CACHING_ENABLED=true
CHATBOT_CACHE_TTL=3600
CHATBOT_CACHE_MAX_SIZE=100

# Optimization settings
CHATBOT_LAZY_LOADING=true
CHATBOT_PRELOAD_MESSAGES=10
CHATBOT_DEBOUNCE_TYPING=300

# Monitoring settings
CHATBOT_MONITORING_ENABLED=false
CHATBOT_MONITORING_SAMPLE_RATE=0.1
CHATBOT_TRACK_METRICS="response_time,error_rate"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
CHATBOT_CONVERSATION_HISTORY=true
CHATBOT_FILE_UPLOAD=false
CHATBOT_VOICE_INPUT=false
CHATBOT_SUGGESTIONS=true
CHATBOT_FEEDBACK=true
CHATBOT_EXPORT=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug settings
CHATBOT_DEBUG_CONFIG=false